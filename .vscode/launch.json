{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "console": "none",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/src/main.py",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "Python: Interactive",
            "type": "python",
            "request": "launch",
            "console": "none",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "--interactive"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "Python: File",
            "type": "python",
            "request": "launch",
            "console": "none",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "-i",
                "${workspaceFolder}/data/greys-anatomy.csv",
                "-o",
                "${workspaceFolder}/data/output"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "Python: Help",
            "type": "python",
            "request": "launch",
            "console": "none",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "-h"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        },
    ]
}